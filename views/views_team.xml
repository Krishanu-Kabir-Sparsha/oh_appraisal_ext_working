<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="oh_appraisal_team_view_form" model="ir.ui.view">
        <field name="name">oh.appraisal.team.form</field>
        <field name="model">oh.appraisal.team</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_create_sub_team" 
                            type="object" 
                            string="Create Sub-Team"
                            class="btn-primary"
                            icon="fa-plus"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-archive">
                            <field name="active" 
                                   widget="boolean_button" 
                                   options='{"terminology": "archive"}'/>
                        </button>
                        
                        <button name="action_view_members" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users"
                                invisible="member_count == 0">
                            <field name="member_count" 
                                   widget="statinfo" 
                                   string="Members"/>
                        </button>
                        
                        <button name="action_view_sub_teams" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-sitemap"
                                invisible="child_count == 0">
                            <field name="child_count" 
                                   widget="statinfo" 
                                   string="Sub-Teams"/>
                        </button>
                    </div>
                    
                    <widget name="web_ribbon" 
                            title="Archived" 
                            bg_color="text-bg-danger" 
                            invisible="active"/>
                    
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Sales Team Alpha"/>
                        </h1>
                        <h3 invisible="not parent_id">
                            <field name="complete_name" readonly="1" class="text-muted"/>
                        </h3>
                    </div>
                    
                    <group>
                        <group string="Basic Information">
                            <field name="code" placeholder="e.g., SALES-A"/>
                            <field name="team_type"/>
                            <field name="parent_id" options="{'no_create': True}"/>
                            <field name="sequence"/>
                        </group>
                        <group string="Organization">
                            <field name="company_id" 
                                   groups="base.group_multi_company"
                                   options="{'no_create': True}"/>
                            <field name="department_id" options="{'no_create': True}"/>
                            <field name="team_leader_id" options="{'no_create': True}"/>
                            <field name="color" widget="color_picker"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Team Members" name="members">
                            <field name="member_ids" 
                                   widget="many2many"
                                   options="{'no_create': True}">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <field name="work_email"/>
                                    <field name="job_id"/>
                                    <field name="image_128"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="d-flex gap-2 align-items-center p-2">
                                                <field name="image_128" widget="image" class="o_image_40_cover rounded-circle"/>
                                                <div class="flex-grow-1 text-truncate">
                                                    <strong class="d-block text-truncate">
                                                        <field name="name"/>
                                                    </strong>
                                                    <div class="text-muted small text-truncate" t-if="record.job_id.value">
                                                        <field name="job_id"/>
                                                    </div>
                                                    <div class="text-muted small text-truncate" t-if="record.work_email.value">
                                                        <i class="fa fa-envelope me-1"/>
                                                        <field name="work_email"/>
                                                    </div>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                        
                        <page string="Sub-Teams" name="sub_teams" invisible="child_count == 0">
                            <field name="child_ids" readonly="1">
                                <list>
                                    <field name="sequence" widget="handle"/>
                                    <field name="name"/>
                                    <field name="team_type"/>
                                    <field name="team_leader_id"/>
                                    <field name="member_count"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Description" name="description">
                            <field name="description" placeholder="Team description, goals, and responsibilities..."/>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Internal notes..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="oh_appraisal_team_view_list" model="ir.ui.view">
        <field name="name">oh.appraisal.team.list</field>
        <field name="model">oh.appraisal.team</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="complete_name"/>
                <field name="department_id"/>
                <field name="team_leader_id"/>
                <field name="member_count"/>
                <field name="child_count"/>
                <field name="company_id" groups="base.group_multi_company" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Search View -->
    <record id="oh_appraisal_team_view_search" model="ir.ui.view">
        <field name="name">oh.appraisal.team.search</field>
        <field name="model">oh.appraisal.team</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="code"/>
                <field name="complete_name"/>
                <field name="department_id"/>
                <field name="team_leader_id"/>
                <separator/>
                <filter string="Active" name="active" domain="[('active','=',True)]"/>
                <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
                <separator/>
                <filter string="Parent Teams" name="parent_teams" domain="[('parent_id','=',False)]"/>
                <filter string="Sub Teams" name="sub_teams" domain="[('parent_id','!=',False)]"/>
                <group expand="0" string="Group By">
                    <filter string="Parent Team" name="group_parent" context="{'group_by':'parent_id'}"/>
                    <filter string="Department" name="group_department" context="{'group_by':'department_id'}"/>
                    <filter string="Team Type" name="group_type" context="{'group_by':'team_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_oh_appraisal_team" model="ir.actions.act_window">
        <field name="name">Teams</field>
        <field name="res_model">oh.appraisal.team</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="oh_appraisal_team_view_search"/>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first team!
            </p>
            <p>
                Teams help organize employees for appraisal assessment.
            </p>
        </field>
    </record>
</odoo>