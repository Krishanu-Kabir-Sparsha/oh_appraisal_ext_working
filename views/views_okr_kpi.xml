<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Actions -->
    <record id="oh_app_ext_action_okr" model="ir.actions.act_window">
        <field name="name">Objectives &amp; Key Results</field>
        <field name="res_model">oh.okr.objective</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <record id="oh_app_ext_action_kpi" model="ir.actions.act_window">
        <field name="name">KPI Tracker</field>
        <field name="res_model">oh.kpi</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
    </record>

    <!-- OKR list -->
    <record id="oh_app_ext_okr_list" model="ir.ui.view">
        <field name="name">oh.okr.objective.list</field>
        <field name="model">oh.okr.objective</field>
        <field name="arch" type="xml">
            <list>
                <field name="title"/>
                <field name="level"/>
                <field name="owner_id"/>
                <field name="progress"/>
            </list>
        </field>
    </record>

    <record id="oh_app_ext_okr_form" model="ir.ui.view">
        <field name="name">oh.okr.objective.form</field>
        <field name="model">oh.okr.objective</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="title"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="level"/>
                        <field name="owner_id"/>
                        <field name="department_id"/>
                        <field name="employee_id"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="progress" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Key Results">
                            <field name="key_result_ids">
                                <list editable="bottom" model="oh.okr.keyresult">
                                    <field name="name"/>
                                    <field name="target_value"/>
                                    <field name="current_value"/>
                                    <field name="progress"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- KPI views -->
    <record id="oh_app_ext_kpi_list" model="ir.ui.view">
        <field name="name">oh.kpi.list</field>
        <field name="model">oh.kpi</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="period"/>
                <field name="department_id"/>
                <field name="employee_id"/>
                <field name="target"/>
                <field name="actual"/>
                <field name="progress"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <record id="oh_app_ext_kpi_form" model="ir.ui.view">
        <field name="name">oh.kpi.form</field>
        <field name="model">oh.kpi</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                    <group>
                        <field name="period"/>
                        <field name="period_start"/>
                        <field name="period_end"/>
                        <field name="department_id"/>
                        <field name="employee_id"/>
                    </group>
                    <group>
                        <field name="target"/>
                        <field name="actual"/>
                        <field name="progress" readonly="1"/>
                        <field name="status" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
